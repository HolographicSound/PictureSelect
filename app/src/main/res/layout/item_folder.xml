<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_text"
    android:paddingLeft="@dimen/margin_layout"
    android:paddingRight="@dimen/margin_layout"
    android:paddingTop="@dimen/margin_text">

    <ImageView
        android:id="@+id/first_image"
        android:layout_width="@dimen/big_image_size"
        android:layout_height="@dimen/big_image_size"
        android:scaleType="centerCrop"
        tools:src="@mipmap/loading_failed" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_layout"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_3"
            android:textSize="@dimen/middle_text_size"
            tools:text="所有图片" />

        <TextView
            android:id="@+id/image_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_9"
            android:textSize="@dimen/mini_text_size"
            tools:text="12 张" />
    </LinearLayout>

    <ImageView
        android:id="@+id/selectStateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/radio_button" />
</LinearLayout>